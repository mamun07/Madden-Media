{% doc %}
  @prompt
    3 videos section that loop

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-video-section-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: {{ block.settings.video_gap }}px;
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-video-item-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-video-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.video_height }}px;
  }

  .ai-video-element-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-video-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.border_radius }}px;
    position: relative;
  }

  .ai-video-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    color: #999;
  }

  .ai-video-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-video-overlay-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
    color: white;
    padding: 20px;
    transform: translateY(100%);
    transition: transform 0.3s ease;
  }

  .ai-video-item-{{ ai_gen_id }}:hover .ai-video-overlay-{{ ai_gen_id }} {
    transform: translateY(0);
  }

  .ai-video-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight:600;
    margin: 0 0 8px;
    color: white;
  }

  .ai-video-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    margin: 0;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.4;
  }

  @media screen and (max-width: 749px) {
    .ai-video-section-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.video_gap | times: 0.75 }}px;
      padding: {{ block.settings.section_padding | times: 0.5 }}px;
    }

    .ai-video-wrapper-{{ ai_gen_id }} {
      height: {{ block.settings.video_height | times: 0.75 }}px;
    }

    .ai-video-overlay-{{ ai_gen_id }} {
      transform: translateY(0);
      background: rgba(0, 0, 0, 0.7);
    }
  }
{% endstyle %}

<div class="ai-video-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% for i in (1..3) %}
    {% liquid
      assign video_key = 'video_' | append: i
      assign title_key = 'video_' | append: i | append: '_title'
      assign description_key = 'video_' | append: i | append: '_description'
      
      assign video = block.settings[video_key]
      assign title = block.settings[title_key]
      assign description = block.settings[description_key]
    %}

    <div class="ai-video-item-{{ ai_gen_id }}">
      <div class="ai-video-wrapper-{{ ai_gen_id }}">
        {% if video %}
          <video
            class="ai-video-element-{{ ai_gen_id }}"
            autoplay
            muted
            loop
            playsinline
            preload="metadata"
            aria-label="{% if title != blank %}{{ title }}{% else %}Video {{ i }}{% endif %}"
          >
            <source src="{{ video }}" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        {% else %}
          <div class="ai-video-placeholder-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polygon points="5,3 19,12 5,21"></polygon>
            </svg>
            <div class="ai-video-empty-state-{{ ai_gen_id }}">
              Add video {{ i }}
            </div>
          </div>
        {% endif %}

        {% if title != blank or description != blank %}
          <div class="ai-video-overlay-{{ ai_gen_id }}">
            {% if title != blank %}
              <h3 class="ai-video-title-{{ ai_gen_id }}">{{ title }}</h3>
            {% endif %}
            {% if description != blank %}
              <p class="ai-video-description-{{ ai_gen_id }}">{{ description }}</p>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  {% endfor %}
</div>

