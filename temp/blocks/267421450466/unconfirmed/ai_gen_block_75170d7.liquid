{% doc %}
  @prompt
    Create a custom CSS glow effect for product outlines that adds an attractive luminous border around product images and cards. The glow should be subtle but noticeable, enhancing the visual appeal without being overwhelming.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-glow-product-container-{{ ai_gen_id }} {
    position: relative;
    display: inline-block;
    max-width: 100%;
  }

  .ai-glow-product-card-{{ ai_gen_id }} {
    position: relative;
    background-color: {{ block.settings.card_background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .ai-glow-product-card-{{ ai_gen_id }}::before {
    content: '';
    position: absolute;
    top: -{{ block.settings.glow_spread }}px;
    left: -{{ block.settings.glow_spread }}px;
    right: -{{ block.settings.glow_spread }}px;
    bottom: -{{ block.settings.glow_spread }}px;
    background: {{ block.settings.glow_color }};
    border-radius: {{ block.settings.border_radius | plus: block.settings.glow_spread }}px;
    opacity: {{ block.settings.glow_opacity | divided_by: 100.0 }};
    z-index: -1;
    filter: blur({{ block.settings.glow_blur }}px);
  }

  {% if block.settings.enable_hover_effect %}
    .ai-glow-product-card-{{ ai_gen_id }}:hover::before {
      opacity: {{ block.settings.hover_glow_opacity | divided_by: 100.0 }};filter: blur({{ block.settings.hover_glow_blur }}px);
      top: -{{ block.settings.hover_glow_spread }}px;
      left: -{{ block.settings.hover_glow_spread }}px;
      right: -{{ block.settings.hover_glow_spread }}px;
      bottom: -{{ block.settings.hover_glow_spread }}px;
    }
  {% endif %}

  .ai-glow-product-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    margin-bottom: {{ block.settings.content_spacing }}px;
    border-radius: {{ block.settings.image_border_radius }}px;overflow: hidden;
  }

  .ai-glow-product-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-glow-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-glow-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-glow-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  .ai-glow-product-content-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-glow-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    color: {{ block.settings.title_color }};
    margin:0 0 {{ block.settings.content_spacing | divided_by: 2 }}px 0;
    font-weight:600;
  }

  .ai-glow-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_font_size }}px;
    color: {{ block.settings.price_color }};
    margin: 0 0 {{ block.settings.content_spacing }}px 0;
    font-weight: 500;
  }

  .ai-glow-product-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_font_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.4;
    margin: 0 0 {{ block.settings.content_spacing }}px 0;
  }

  .ai-glow-product-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 14px;
    font-weight: 500;
    transition: background-color 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-glow-product-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  {% if block.settings.enable_pulse_effect %}
    @keyframes ai-glow-pulse-{{ ai_gen_id }} {
      0%, 100% {
        opacity: {{ block.settings.glow_opacity | divided_by: 100.0 }};
      }
      50% {
        opacity: {{ block.settings.pulse_max_opacity | divided_by: 100.0 }};
      }
    }

    .ai-glow-product-card-{{ ai_gen_id }}::before {
      animation: ai-glow-pulse-{{ ai_gen_id }} {{ block.settings.pulse_duration }}s ease-in-out infinite;
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-glow-product-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }

    .ai-glow-product-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_font_size | times: 0.9 }}px;
    }

    .ai-glow-product-price-{{ ai_gen_id }} {
      font-size: {{ block.settings.price_font_size | times: 0.9 }}px;
    }

    .ai-glow-product-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.description_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}<div class="ai-glow-product-container-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-glow-product-card-{{ ai_gen_id }}">
    <div class="ai-glow-product-image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.product_image %}
        <img
          src="{{ block.settings.product_image | image_url: width: 800 }}"
          alt="{{ block.settings.product_image.alt | escape }}"
          class="ai-glow-product-image-{{ ai_gen_id }}"loading="lazy"
          width="{{ block.settings.product_image.width }}"
          height="{{ block.settings.product_image.height }}"
        >
      {% else %}
        <div class="ai-glow-product-image-placeholder-{{ ai_gen_id }}">
          {{ 'product-1' | placeholder_svg_tag }}<div class="ai-glow-empty-state-{{ ai_gen_id }}">
            Add a product image
          </div>
        </div>
      {% endif %}
    </div>

    <div class="ai-glow-product-content-{{ ai_gen_id }}">
      {% if block.settings.product_title != blank %}
        <h3 class="ai-glow-product-title-{{ ai_gen_id }}">{{ block.settings.product_title }}</h3>
      {% endif %}

      {% if block.settings.product_price != blank %}
        <div class="ai-glow-product-price-{{ ai_gen_id }}">{{ block.settings.product_price }}</div>
      {% endif %}

      {% if block.settings.product_description != blank %}
        <div class="ai-glow-product-description-{{ ai_gen_id }}">{{ block.settings.product_description }}</div>
      {% endif %}

      {% if block.settings.button_text != blank %}
        <a
          href="{{ block.settings.button_link | default: '#' }}"
          class="ai-glow-product-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

