<style>
  {% if section.settings.height_header == true %}
    body#themes-plain-jane .section-header.shopify-section-group-header-group {
      display: none;
    }
  {% endif %}
</style>

{% schema %}
  {
    "name": "Landing page",
    "settings": [
      {
        "type": "checkbox",
        "id": "height_header",
        "default": false,
        "label": "Hide Header"
      }
    ]
  }
{% endschema %}