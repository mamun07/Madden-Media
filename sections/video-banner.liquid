{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    position: relative;
    z-index: 1;
  }
  .section-{{ section.id }}-padding:after {
      position: absolute;
      content: '';
      left: 0;
      top: 0;
      right:0;
      bottom: 0;
      background-image: linear-gradient(#000000b0 60%, #000);
      background-position: 0 0;
      z-index: -1;
  }
  .section-{{ section.id }}-padding .glow_button{
      position: relative;
      margin-left: auto;
      margin-right: auto;
      display: block;
      padding: 14px 48px;
      background: linear-gradient(135deg, 
          rgba(200, 200, 210, 0.12) 0%,
          rgba(150, 150, 160, 0.08) 100%);
      backdrop-filter: blur(20px);
      border: 1px solid rgba(200, 200, 210, 0.2);
      border-radius: 16px;
      color: #e8e8f0;
      font-size: 1.2rem;
      font-family: 'Satoshi', 'General Sans', sans-serif;
      letter-spacing: 1px;
      font-weight: 700;
      cursor: pointer;
      text-decoration: none;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
      box-shadow: 0 8px 32px rgba(0, 0, 0, 0.4),
          inset 0 1px 0 rgba(255, 255, 255, 0.15),
          inset 0 -1px 0 rgba(0, 0, 0, 0.2);
  }
  .section-{{ section.id }}-padding .glow_button::before {
    content: "";
    position: absolute;
    inset: -30px;
    border-radius: 16px;
    background: radial-gradient(circle, 
        rgba(120, 140, 160, 0.15) 0%, 
        rgba(80, 100, 140, 0.12) 50%,
        transparent 70%);
    filter: blur(25px);
    opacity: 0;
    z-index: -1;
    transition: all 0.4s ease;
  }
  .section-{{ section.id }}-padding .glow_button:hover {
      transform: translateY(-4px);
      background: linear-gradient(135deg, 
          #a8bcc8 0%,
          #7a94a8 15%,
          #5a7a95 30%,
          #4a8bc2 45%,
          #00bfff 60%,
          #87ceeb 75%,
          #e6e6fa 90%,
          #dcdcdc 100%);
      background-size: 200% 200%;
      animation: chromeFlow 3s ease-in-out infinite;
      border-color: rgba(135, 206, 235, 0.8);
      color: #ffffff;
      box-shadow: 0 16px 48px rgba(0, 0, 0, 0.5),
          0 0 80px rgba(0, 191, 255, 0.5),
          0 0 120px rgba(135, 206, 235, 0.4),
          inset 0 1px 0 rgba(255, 255, 255, 0.4),
          inset 0 -1px 0 rgba(0, 0, 0, 0.2);
  }


  .section-{{ section.id }}-padding .bg_banner_area{
      position: absolute;
      content: '';
      left: 0;
      top: 0;
      right:0;
      bottom: 0;
      z-index: -1;
      overflow: hidden;
  }
  .section-{{ section.id }}-padding .bg_banner_area video{
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  .section-{{ section.id }}-padding a.glow_button {
    max-width: 250px;
    margin-top: 50px;
  }
  .section-{{ section.id }}-padding h2.rich-text__heading{
    margin: 30px 0;
  }
  .section-{{ section.id }}-padding .rich-text__heading {
      color: #fff;
      text-align: center;
      letter-spacing: 2px;
      -webkit-text-fill-color: transparent;
      background-image: linear-gradient(#fff 30% 55%, #fff 59%, #5ba5c5 90%);
      -webkit-background-clip: text;
      background-clip: text;
      width: 100%;
      max-width: none;
      margin: 20px auto;
      font-family: Satoshi, Arial, sans-serif;
      font-size: 100px;
      font-weight: 900;
      line-height: 105px;
      text-decoration: none;
  }

  
  @media screen and (min-width: 769px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}


<div class="color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  {% if section.settings.bg_video != blank or section.settings.bg_image != blank %}
    <div class="bg_banner_area">
      {% if section.settings.bg_image != blank %}
        {{ section.settings.bg_image | image_url: width: 5000 | image_tag  }}
      {% elsif section.settings.bg_video != blank %}
        {{ section.settings.bg_video | video_tag:image_size: '1100x',autoplay: true,loop: true,controls: false,muted: true }}
      {% else %}
        {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </div>
  {% endif %}
  <div class="{{ section.settings.section_width }}">
      <div class="main_content_area {{ section.settings.alignment }}">
          {%- for block in section.blocks -%}
              {%- case block.type -%}
                {%- when 'image' -%}
                  <div class="image_area">
                    {% if block.settings.image != blank %}
                      {{ block.settings.image | image_url: width: 2000 | image_tag  }}
                    {% else %}
                      {{ 'hero-apparel-2' | placeholder_svg_tag: 'placeholder-svg' }}
                    {% endif %}
                  </div>
                {%- when 'heading' -%}
                  <h2
                    class="rich-text__heading rte inline-richtext {{ block.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                    {{ block.shopify_attributes }}
                    {% if settings.animations_reveal_on_scroll %}
                      data-cascade
                      style="--animation-order: {{ forloop.index }};"
                    {% endif %}
                  >
                    {{ block.settings.heading }}
                  </h2>
                {%- when 'caption' -%}
                  <p
                    class="rich-text__caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                    {{ block.shopify_attributes }}
                    {% if settings.animations_reveal_on_scroll %}
                      data-cascade
                      style="--animation-order: {{ forloop.index }};"
                    {% endif %}
                  >
                    {{ block.settings.caption | escape }}
                  </p>
                {%- when 'text' -%}
                  <div
                    class="rich-text__text rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
                    {{ block.shopify_attributes }}
                    {% if settings.animations_reveal_on_scroll %}
                      data-cascade
                      style="--animation-order: {{ forloop.index }};"
                    {% endif %}
                  >
                    {{ block.settings.text }}
                  </div>
                {%- when 'button' -%}
                  {%- if block.settings.button_label != blank -%}
                    <a
                      {% if block.settings.button_link == blank %}
                        role="link" aria-disabled="true"
                      {% else %}
                        href="{{ block.settings.button_link }}"
                      {% endif %}
                      class="glow_button"
                    >
                      {{- block.settings.button_label | escape -}}
                    </a>
                  {%- endif -%}
              {%- endcase -%}
            {%- endfor -%}
      </div>
  </div>
</div>

